<form action="/posts/update/<%=post._id%>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="title">Title</label>
        <input name="title" placeholder="Insert a title" type="text" value="<%=post.title%>"/>
    </div>

    <div class="mb-3">
        <label for="text" class="form-label">Text</label>
        <input name="text" placeholder="Insert a text" type="text" value="<%=post.text%>"/>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>