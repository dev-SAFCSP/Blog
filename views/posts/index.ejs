<a class="btn btn-dark mb-4" href="/posts/create">New Post</a>
<table class="table table-bordered">
    <thead>
        <tr>
        <th>Title</th>
        <th>Text</th>
        <th>User id</th>
        <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        <% posts.forEach(post=> { %>
            <tr>
            <td><%= post.title %></td>
            <td><%= post.text %></td>
            <td><%= post.userID %></td>
            <td>
                <a class="btn btn-danger" href="/posts/delete/<%= post._id%>?_method=delete">delete</a>
                <a class="btn btn-dark" href="/posts/update/<%= post._id%>">update</a>
            </td>
        </tr>
        <% })%>
    </tbody>
</table>