<div class="row row-cols-1 row-cols-md-3 g-4">
    <% posts.forEach(post=> { %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><b><%= post.title %></b></h5>
          <p class="card-text"><%= post.text %></p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>