<form action="/users/create" method="POST">
    <div class="mb-3">
        <label for="fname">First Name</label>
        <input name="fname" class="form-control" placeholder="Insert your first name" type="text"/>
    </div>

    <div class="mb-3">
        <label for="lname" class="form-label">Last Name</label>
        <input name="lname" class="form-control" placeholder="Insert your last name" type="text"/>
    </div>
    <div class="mb-3">
        <label for="DoB">Date of Birth</label>
        <input name="DoB" class="form-control" placeholder="Insert a Date" type="date"/>
    </div>
    <div class="mb-3">
        <label for="gender">Gender</label>
        <select class="form-select" name="gender">
            <option value="true">Female</option>
            <option value="false">Male</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="email">Email</label>
        <input name="email" class="form-control" placeholder="Insert an Email" type="email"/>
    </div>

    <div class="mb-3">
        <label for="userName">User Name</label>
        <input name="userName" class="form-control" required placeholder="Insert a user name" type="text"/>
    </div>
    <div class="mb-3">
        <label for="password">Password</label>
         <input name="password" class="form-control" placeholder="Insert a Password" type="password"/>
    </div>

    <button type="submit" class="btn btn-dark">Create</button>
</form>