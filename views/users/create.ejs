<form action="/users/create" method="POST">
    <div class="mb-3">
        <label for="fname">First Name</label>
        <input name="fname" class="form-control" placeholder="Insert your first name" type="text"/>
    </div>

    <div class="mb-3">
        <label for="lname" class="form-label">Last Name</label>
        <input name="lname" class="form-control" placeholder="Insert your last name" type="text"/>
    </div>
    <div class="mb-3">
        <label for="DoB">Date of Birth</label>
        <input name="DoB" class="form-control" placeholder="Insert a Date" type="date"/>
    </div>
    <div class="mb-3">
        <label class="gender-lable" for="gender">Gender </label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" value="false">
            <label class="form-check-label" for="gender">Male</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" value="true">
            <label class="form-check-label" for="gender">Female</label>
          </div>
    </div>

    <div class="mb-3">
        <label for="email">Email</label>
        <input name="email" class="form-control" placeholder="Insert an Email" type="email"/>
    </div>

    <div class="mb-3">
        <label for="userName">User Name</label>
        <input name="userName" class="form-control" required placeholder="Insert a user name" type="text"/>
    </div>
    <div class="mb-3">
        <label for="password">Password</label>
         <input name="password" class="form-control" placeholder="Insert a Password" type="password"/>
    </div>

    <button type="submit" class="btn btn-dark">Create</button>
</form>