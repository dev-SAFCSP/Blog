<form action="/update/<%=user._id%>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="fname">First Name</label>
        <input name="fname" placeholder="Insert your first name" type="text" value="<%=user.name.firstName%>"/>
    </div>

    <div class="mb-3">
        <label for="lname" class="form-label">Last Name</label>
        <input name="lname" placeholder="Insert your last name" type="text" value="<%=user.name.lastName%>"/>
    </div>
    <div class="mb-3">
        <label for="DoB">Date of Birth</label>
        <input name="DoB" placeholder="Insert a Date" type="date" value="<%=user.DoB%>"/>
    </div>

    <label for="gender">Gender</label>
    <select name="gender">
        <option value="true">Female</option>
        <option value="false">Male</option>
    </select>

    <div class="mb-3">
        <label for="email">Email</label>
        <input name="email" placeholder="Insert an Email" type="email" value="<%=user.email%>"/>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>