<form action="/users/login" method="POST">
    <div class="mb-3">
        <label for="email">Email</label>
        <input name="email" class="form-control" placeholder="Insert an Email" type="email"/>
    </div>

    <div class="mb-3">
        <label for="password">Password</label>
        <input name="password" class="form-control" placeholder="Insert a Password" type="password"/>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
